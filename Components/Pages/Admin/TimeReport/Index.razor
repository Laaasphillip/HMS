@page "/timereport"
@using HMS.Services
@using HMS.Models
@using Microsoft.AspNetCore.Authorization
@inject AdminService AdminService
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize(Policy = "AdminOrStaff")]
@rendermode InteractiveServer

<PageTitle>My Time Reports</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-clock-history"></i> My Time Reports</h3>
        <AuthorizeView Policy="AdminOnly">
            <button class="btn btn-primary" @onclick="NavigateToCreateTimeReport">
                <i class="bi bi-plus-circle"></i> Create Time Report
            </button>
        </AuthorizeView>
    </div>


    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else
    {
        <!-- Filter -->
        <div class="row mb-3">
            <div class="col-md-6">
                <input class="form-control"
                       placeholder="🔍 Search by activity or notes..."
                       @bind="searchQuery"
                       @bind:event="oninput" />
            </div>
            <div class="col-md-3">
                <select class="form-select" @bind="statusFilter">
                    <option value="">All Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
        </div>

        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total Reports</h6>
                        <h3 class="mb-0">@FilteredReports.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">This Week Hours</h6>
                        <h3 class="mb-0">@thisWeekHours.ToString("F1")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Pending Approval</h6>
                        <h3 class="mb-0">@pendingCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">This Month Hours</h6>
                        <h3 class="mb-0">@thisMonthHours.ToString("F1")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Time Reports Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                @if (!FilteredReports.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-2">No time reports found</p>
                    </div>
                }
                else
                {
                    <div class="d-none d-lg-block">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Clock In</th>
                                        <th>Clock Out</th>
                                        <th>Hours</th>
                                        <th>Activity</th>
                                        <th>Deviations</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in FilteredReports)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                                         style="width: 40px; height: 40px; font-size: 0.9rem;">
                                                        @GetInitials(report.Staff?.User?.FirstName, report.Staff?.User?.LastName)
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">Dr. @report.Staff?.User?.FirstName @report.Staff?.User?.LastName</div>
                                                        <small class="text-muted">@report.Staff?.Specialization</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@report.ClockIn.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <i class="bi bi-clock"></i> @report.ClockIn.ToString("HH:mm")
                                            </td>
                                            <td>
                                                @if (report.ClockOut.HasValue)
                                                {
                                                    <i class="bi bi-clock"></i>
                                                    <text>@report.ClockOut.Value.ToString("HH:mm")</text>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                            </td>
                                            <td>@report.HoursWorked.ToString("F2")</td>
                                            <td>@report.ActivityType</td>
                                            <td>
                                                @if (report.LateArrivalMinutes.HasValue && report.LateArrivalMinutes.Value > 0)
                                                {
                                                    <span class="badge bg-warning text-dark me-1">
                                                        Late: @report.LateArrivalMinutes min
                                                    </span>
                                                }
                                                @if (report.EarlyDepartureMinutes.HasValue && report.EarlyDepartureMinutes.Value > 0)
                                                {
                                                    <span class="badge bg-info">
                                                        Early: @report.EarlyDepartureMinutes min
                                                    </span>
                                                }
                                                @if ((!report.LateArrivalMinutes.HasValue || report.LateArrivalMinutes.Value == 0) &&
                                                                                    (!report.EarlyDepartureMinutes.HasValue || report.EarlyDepartureMinutes.Value == 0))
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (report.ApprovalStatus == "Approved")
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else if (report.ApprovalStatus == "Rejected")
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(report.Notes))
                                                {
                                                    <small class="text-muted">@(report.Notes.Length > 30 ? report.Notes.Substring(0, 30) + "..." : report.Notes)</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-warning"
                                                            @onclick="() => EditReport(report.Id)"
                                                            title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger"
                                                            @onclick="() => ConfirmDelete(report.Id)"
                                                            title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                    @if (report.ApprovalStatus == "Pending")
                                                    {
                                                        <button class="btn btn-sm btn-outline-success"
                                                                @onclick="() => ApproveReport(report.Id)"
                                                                title="Approve">
                                                            <i class="bi bi-check-square-fill"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger"
                                                                @onclick="() => RejectReport(report.Id)"
                                                                title="Reject">
                                                            <i class="bi bi-x-square-fill"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Mobile Card View -->
                    <div class="d-block d-lg-none">
                        @foreach (var report in FilteredReports)
                        {
                            <div class="card appointment-card border-0 shadow-sm mb-3">
                                <div class="card-header bg-light border-bottom">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 40px; height: 40px; font-size: 0.9rem;">
                                                @GetInitials(report.Staff?.User?.FirstName, report.Staff?.User?.LastName)
                                            </div>
                                            <div>
                                                <div class="fw-semibold">Dr. @report.Staff?.User?.FirstName @report.Staff?.User?.LastName</div>
                                                <small class="text-muted">@report.Staff?.Specialization</small>
                                            </div>
                                        </div>
                                        @if (report.ApprovalStatus == "Approved")
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (report.ApprovalStatus == "Rejected")
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                        <span class="text-muted small">Date</span>
                                        <span class="fw-medium">@report.ClockIn.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                        <span class="text-muted small">Clock In</span>
                                        <span class="fw-medium">@report.ClockIn.ToString("HH:mm")</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                        <span class="text-muted small">Clock Out</span>
                                        <span class="fw-medium">
                                            @if (report.ClockOut.HasValue)
                                            {
                                                <i class="bi bi-clock"></i>
                                                <span class="fw-medium">@report.ClockOut.Value.ToString("HH:mm")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                        <span class="text-muted small">Duration</span>
                                        <span class="badge bg-light text-dark">@report.HoursWorked.ToString("F2")</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center py-2">
                                        <span class="text-muted small">Activity</span>
                                        <span class="fw-medium text-end">@report.ActivityType</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center py-2">
                                        <span class="text-muted small">Deviations</span>
                                        <span class="fw-medium text-end">
                                            @if (report.LateArrivalMinutes.HasValue && report.LateArrivalMinutes.Value > 0)
                                            {
                                                <span class="badge bg-warning text-dark me-1">
                                                    Late: @report.LateArrivalMinutes min
                                                </span>
                                            }
                                            @if (report.EarlyDepartureMinutes.HasValue && report.EarlyDepartureMinutes.Value > 0)
                                            {
                                                <span class="badge bg-info">
                                                    Early: @report.EarlyDepartureMinutes min
                                                </span>
                                            }
                                            @if ((!report.LateArrivalMinutes.HasValue || report.LateArrivalMinutes.Value == 0) &&
                                                                            (!report.EarlyDepartureMinutes.HasValue || report.EarlyDepartureMinutes.Value == 0))
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center py-2">
                                        <span class="text-muted small">Notes</span>
                                        <span class="fw-medium text-end">
                                            @if (!string.IsNullOrEmpty(report.Notes))
                                            {
                                                <small class="text-muted">@(report.Notes.Length > 30 ? report.Notes.Substring(0, 30) + "..." : report.Notes)</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </span>
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-top">
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary flex-fill" @onclick="() => EditReport(report.Id)">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger flex-fill" @onclick="() => ConfirmDelete(report.Id)">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                        @if (report.ApprovalStatus == "Pending")
                                        {
                                            <button class="btn btn-sm btn-outline-success flex-fill" @onclick="() => ApproveReport(report.Id)">
                                                <i class="bi bi-check-square me-1"></i>Approve
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger flex-fill" @onclick="() => RejectReport(report.Id)">
                                                <i class="bi bi-x-square me-1"></i>Reject
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this time report?</p>
                    <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteReport">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TimeReport> timeReports = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string searchQuery = "";
    private string statusFilter = "";

    private decimal thisWeekHours = 0;
    private decimal thisMonthHours = 0;
    private int pendingCount = 0;
    private bool showDeleteModal = false;
    private int reportToDelete = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            timeReports = await AdminService.GetMyAdminTimeReportsAsync();

            // Calculate statistics
            var now = DateTime.Now;
            var weekStart = now.AddDays(-(int)now.DayOfWeek);
            var monthStart = new DateTime(now.Year, now.Month, 1);

            thisWeekHours = timeReports
                .Where(tr => tr.ClockIn >= weekStart)
                .Sum(tr => tr.HoursWorked);

            thisMonthHours = timeReports
                .Where(tr => tr.ClockIn >= monthStart)
                .Sum(tr => tr.HoursWorked);

            pendingCount = timeReports
                .Count(tr => tr.ApprovalStatus == "Pending");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading time reports: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private List<TimeReport> FilteredReports
    {
        get
        {
            var filtered = timeReports.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                filtered = filtered.Where(tr =>
                    tr.ActivityType.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    (tr.Notes != null && tr.Notes.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)));
            }

            if (!string.IsNullOrWhiteSpace(statusFilter))
            {
                filtered = filtered.Where(tr => tr.ApprovalStatus == statusFilter);
            }

            return filtered.OrderByDescending(tr => tr.ClockIn).ToList();
        }
    }

    private void NavigateToCreateTimeReport()
    {
        Navigation.NavigateTo("/admin/timereport/create");
    }

    private void EditReport(int id)
    {
        Navigation.NavigateTo($"/admin/timereport/edit/{id}");
    }

    private void ConfirmDelete(int id)
    {
        reportToDelete = id;
        showDeleteModal = true;
    }
    private async Task ApproveReport(int id)
    {
        try
        {
            var result = await AdminService.ApproveTimeReportAsync(id, true);

            if (result.Success)
            {
                await OnInitializedAsync();
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error approving report: {ex.Message}";
        }
    }
    private async Task RejectReport(int id)
    {
        try
        {
            var result = await AdminService.ApproveTimeReportAsync(id, false);

            if (result.Success)
            {
                await OnInitializedAsync();
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error approving report: {ex.Message}";
        }
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        reportToDelete = 0;
    }
    private string GetInitials(string? firstName, string? lastName)
    {
        var first = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString() : "";
        var last = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString() : "";
        return (first + last).ToUpper();
    }

    private async Task DeleteReport()
    {
        try
        {
            var result = await AdminService.DeleteTimeReportAsync(reportToDelete);

            if (result.Success)
            {
                await OnInitializedAsync();
                showDeleteModal = false;
                reportToDelete = 0;
            }
            else
            {
                errorMessage = result.Message;
                showDeleteModal = false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting report: {ex.Message}";
            showDeleteModal = false;
        }
    }
}