@page "/timereport"
@using HMS.Services
@using HMS.Models
@using Microsoft.AspNetCore.Authorization
@inject AdminService AdminService
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize(Policy = "AdminOrStaff")]
@rendermode InteractiveServer

<PageTitle>My Time Reports</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-clock-history"></i> My Time Reports</h3>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else
    {
        <!-- Filter -->
        <div class="row mb-3">
            <div class="col-md-6">
                <input class="form-control"
                       placeholder="🔍 Search by activity or notes..."
                       @bind="searchQuery"
                       @bind:event="oninput" />
            </div>
            <div class="col-md-3">
                <select class="form-select" @bind="statusFilter">
                    <option value="">All Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
        </div>

        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total Reports</h6>
                        <h3 class="mb-0">@FilteredReports.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">This Week Hours</h6>
                        <h3 class="mb-0">@thisWeekHours.ToString("F1")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Pending Approval</h6>
                        <h3 class="mb-0">@pendingCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">This Month Hours</h6>
                        <h3 class="mb-0">@thisMonthHours.ToString("F1")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Time Reports Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                @if (!FilteredReports.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-2">No time reports found</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Clock In</th>
                                    <th>Clock Out</th>
                                    <th>Hours</th>
                                    <th>Activity</th>
                                    <th>Deviations</th>
                                    <th>Status</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in FilteredReports)
                                {
                                    <tr>
                                        <td>@report.ClockIn.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <i class="bi bi-clock"></i> @report.ClockIn.ToString("HH:mm")
                                        </td>
                                        <td>
                                            @if (report.ClockOut.HasValue)
                                            {
                                                <i class="bi bi-clock"></i>
                                                <text>@report.ClockOut.Value.ToString("HH:mm")</text>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </td>
                                        <td>@report.HoursWorked.ToString("F2")</td>
                                        <td>@report.ActivityType</td>
                                        <td>
                                            @if (report.LateArrivalMinutes.HasValue && report.LateArrivalMinutes.Value > 0)
                                            {
                                                <span class="badge bg-warning text-dark me-1">
                                                    Late: @report.LateArrivalMinutes min
                                                </span>
                                            }
                                            @if (report.EarlyDepartureMinutes.HasValue && report.EarlyDepartureMinutes.Value > 0)
                                            {
                                                <span class="badge bg-info">
                                                    Early: @report.EarlyDepartureMinutes min
                                                </span>
                                            }
                                            @if ((!report.LateArrivalMinutes.HasValue || report.LateArrivalMinutes.Value == 0) &&
                                                                            (!report.EarlyDepartureMinutes.HasValue || report.EarlyDepartureMinutes.Value == 0))
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (report.ApprovalStatus == "Approved")
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else if (report.ApprovalStatus == "Rejected")
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(report.Notes))
                                            {
                                                <small class="text-muted">@(report.Notes.Length > 30 ? report.Notes.Substring(0, 30) + "..." : report.Notes)</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<TimeReport> timeReports = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string searchQuery = "";
    private string statusFilter = "";

    private decimal thisWeekHours = 0;
    private decimal thisMonthHours = 0;
    private int pendingCount = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            timeReports = await AdminService.GetMyTimeReportsAsync();

            // Calculate statistics
            var now = DateTime.Now;
            var weekStart = now.AddDays(-(int)now.DayOfWeek);
            var monthStart = new DateTime(now.Year, now.Month, 1);

            thisWeekHours = timeReports
                .Where(tr => tr.ClockIn >= weekStart)
                .Sum(tr => tr.HoursWorked);

            thisMonthHours = timeReports
                .Where(tr => tr.ClockIn >= monthStart)
                .Sum(tr => tr.HoursWorked);

            pendingCount = timeReports
                .Count(tr => tr.ApprovalStatus == "Pending");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading time reports: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private List<TimeReport> FilteredReports
    {
        get
        {
            var filtered = timeReports.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                filtered = filtered.Where(tr =>
                    tr.ActivityType.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    (tr.Notes != null && tr.Notes.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)));
            }

            if (!string.IsNullOrWhiteSpace(statusFilter))
            {
                filtered = filtered.Where(tr => tr.ApprovalStatus == statusFilter);
            }

            return filtered.OrderByDescending(tr => tr.ClockIn).ToList();
        }
    }
}
