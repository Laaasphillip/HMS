@page "/admin/timereport/edit/{id:int}"
@using HMS.Models
@using HMS.Services
@using Microsoft.AspNetCore.Authorization
@using System.ComponentModel.DataAnnotations
@attribute [Authorize(Policy = "AdminOnly")]
@inject AdminService AdminService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Edit Time Report</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Edit Time Report #@Id
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                        </div>
                    }

                    @if (loading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (timeReport == null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> Time report not found.
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@timeReport" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger mb-3" />

                            <div class="row">
                                <!-- Staff Selection -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Staff Member *</label>
                                    <select class="form-select" @bind="timeReport.StaffId">
                                        @foreach (var staff in staffMembers)
                                        {
                                            <option value="@staff.Id">
                                                @staff.User?.FirstName @staff.User?.LastName - @staff.Department
                                            </option>
                                        }
                                    </select>
                                </div>

                                <!-- Schedule Selection (Optional) -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Schedule (Optional)</label>
                                    <select class="form-select" @bind="scheduleIdString">
                                        <option value="">-- No Schedule --</option>
                                        @foreach (var schedule in schedules)
                                        {
                                            <option value="@schedule.Id">
                                                @schedule.Staff?.User?.FirstName @schedule.Staff?.User?.LastName -
                                                @schedule.StartTime.ToString("yyyy-MM-dd HH:mm")
                                            </option>
                                        }
                                    </select>
                                </div>

                                <!-- Clock In Date -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Clock In Date *</label>
                                    <input type="date" class="form-control" @bind="clockInDate" />
                                </div>

                                <!-- Clock In Time -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Clock In Time *</label>
                                    <input type="time" class="form-control" @bind="clockInTime" />
                                </div>

                                <!-- Clock Out Date -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Clock Out Date</label>
                                    <input type="date" class="form-control" @bind="clockOutDate" />
                                    <small class="text-muted">Leave empty if still working</small>
                                </div>

                                <!-- Clock Out Time -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Clock Out Time</label>
                                    <input type="time" class="form-control" @bind="clockOutTime" />
                                </div>

                                <!-- Activity Type -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Activity Type *</label>
                                    <select class="form-select" @bind="timeReport.ActivityType">
                                        <option value="Regular Work">Regular Work</option>
                                        <option value="Overtime">Overtime</option>
                                        <option value="On-Call">On-Call</option>
                                        <option value="Emergency">Emergency</option>
                                        <option value="Training">Training</option>
                                        <option value="Meeting">Meeting</option>
                                    </select>
                                </div>

                                <!-- Calculated Hours (Read-only) -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Hours Worked</label>
                                    <input type="text" class="form-control" value="@GetCalculatedHours()" readonly />
                                    <small class="text-muted">Calculated automatically</small>
                                </div>

                                <!-- Notes -->
                                <div class="col-12 mb-3">
                                    <label class="form-label">Notes</label>
                                    <textarea @bind="timeReport.Notes" class="form-control" rows="3"></textarea>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-warning" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Updating...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle me-1"></i>
                                        <span>Update Time Report</span>
                                    }
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isSubmitting">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private TimeReport? timeReport;
    private List<Staff> staffMembers = new();
    private List<Schedule> schedules = new();

    private DateTime clockInDate;
    private string clockInTime = "";
    private DateTime? clockOutDate;
    private string? clockOutTime;
    private string scheduleIdString = "";

    private bool loading = true;
    private bool isSubmitting = false;
    private string? errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load the time report
            timeReport = await AdminService.GetTimeReportByIdAsync(Id);

            if (timeReport != null)
            {
                // Load staff and schedules
                staffMembers = await AdminService.GetAllStaffAsync();
                schedules = await AdminService.GetAllSchedulesAsync();

                // Initialize form values
                clockInDate = timeReport.ClockIn.Date;
                clockInTime = timeReport.ClockIn.ToString("HH:mm");

                if (timeReport.ClockOut.HasValue)
                {
                    clockOutDate = timeReport.ClockOut.Value.Date;
                    clockOutTime = timeReport.ClockOut.Value.ToString("HH:mm");
                }

                scheduleIdString = timeReport.ScheduleId?.ToString() ?? "";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading time report: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private string GetCalculatedHours()
    {
        if (clockOutDate.HasValue && !string.IsNullOrEmpty(clockOutTime))
        {
            var clockIn = clockInDate.Add(TimeSpan.Parse(clockInTime));
            var clockOut = clockOutDate.Value.Add(TimeSpan.Parse(clockOutTime));
            var duration = clockOut - clockIn;
            return duration.TotalHours.ToString("F2") + " hours";
        }
        return "N/A (Still working)";
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            if (timeReport == null) return;

            // Update ClockIn
            timeReport.ClockIn = clockInDate.Add(TimeSpan.Parse(clockInTime));

            // Update ClockOut (if provided)
            if (clockOutDate.HasValue && !string.IsNullOrEmpty(clockOutTime))
            {
                timeReport.ClockOut = clockOutDate.Value.Add(TimeSpan.Parse(clockOutTime));
            }
            else
            {
                timeReport.ClockOut = null;
            }

            // Update ScheduleId
            timeReport.ScheduleId = string.IsNullOrEmpty(scheduleIdString) ? null : int.Parse(scheduleIdString);

            // Call AdminService to update
            var result = await AdminService.UpdateTimeReportAsync(timeReport);

            if (result.Success)
            {
                Navigation.NavigateTo("/admin/timereport/index");
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating time report: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/admin/timereport/index");
    }
}
