@page "/admin/timereport/create"
@using HMS.Models
@using HMS.Services
@using Microsoft.AspNetCore.Authorization
@using System.ComponentModel.DataAnnotations
@attribute [Authorize(Policy = "AdminOnly")]
@inject AdminService AdminService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Create Time Report</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Create New Time Report
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                            <button type="button" class="btn-close" @onclick="ClearError"></button>
                        </div>
                    }

                    @if (loading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <!-- Staff Selection -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Staff Member *</label>
                                <select class="form-select" @bind="model.StaffId">
                                    <option value="0">-- Select Staff --</option>
                                    @foreach (var staff in staffMembers)
                                    {
                                        <option value="@staff.Id">
                                            @staff.User?.FirstName @staff.User?.LastName - @staff.Department
                                        </option>
                                    }
                                </select>
                                @if (model.StaffId == 0 && showValidation)
                                {
                                    <div class="text-danger small mt-1">Staff member is required</div>
                                }
                            </div>

                            <!-- Schedule Selection (Optional) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Schedule (Optional)</label>
                                <select class="form-select" @onchange="UpdateDatesFromSchedule">
                                    <option value="0">-- No Schedule --</option>
                                    @foreach (var schedule in FilteredSchedules)
                                    {
                                        <option value="@schedule.Id">
                                            @schedule.Staff?.User?.FirstName @schedule.Staff?.User?.LastName -
                                            @schedule.Date.ToString("yyyy-MM-dd") -
                                            @schedule.StartTime.ToString(@"hh\:mm")
                                        </option>
                                    }
                                </select>
                            </div>

                            <!-- Clock In Date -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Clock In Date *</label>
                                <input type="date"
                                       class="form-control"
                                       value="@clockInDateString"

                                       disabled
 />
                            </div>

                            <!-- Clock In Time -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Clock In Time *</label>
                                <input type="time"
                                       class="form-control"
                                       value="@clockInTimeString"
                                       @onchange="@(e => clockInTimeString = e.Value?.ToString() ?? string.Empty)" />
                            </div>

                            <!-- Clock Out Date -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Clock Out Date</label>
                                <input type="date"
                                       class="form-control"
                                       value="@clockOutDateString"
                                       @onchange="@(e => clockOutDateString = e.Value?.ToString() ?? string.Empty)" />
                                <small class="text-muted">Optional - leave empty if still working</small>
                            </div>

                            <!-- Clock Out Time -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Clock Out Time</label>
                                <input type="time"
                                       class="form-control"
                                       value="@clockOutTimeString"
                                       @onchange="@(e => clockOutTimeString = e.Value?.ToString() ?? string.Empty)" />
                            </div>

                            <!-- Activity Type -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Activity Type *</label>
                                <select class="form-select" @bind="model.ActivityType">
                                    <option value="">-- Select Activity --</option>
                                    <option value="Regular Work">Regular Work</option>
                                    <option value="Overtime">Overtime</option>
                                    <option value="On-Call">On-Call</option>
                                    <option value="Emergency">Emergency</option>
                                    <option value="Training">Training</option>
                                    <option value="Meeting">Meeting</option>
                                </select>
                                @if (string.IsNullOrEmpty(model.ActivityType) && showValidation)
                                {
                                    <div class="text-danger small mt-1">Activity type is required</div>
                                }
                            </div>

                            <!-- Calculated Hours (Read-only) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Hours Worked</label>
                                <input type="text" class="form-control" value="@CalculateHours()" readonly />
                                <small class="text-muted">Calculated automatically</small>
                            </div>

                            <!-- Notes -->
                            <div class="col-12 mb-3">
                                <label class="form-label">Notes</label>
                                <textarea @bind="model.Notes" class="form-control" rows="3" placeholder="Optional notes..."></textarea>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 mt-4">
                            <button type="button" class="btn btn-success" @onclick="HandleSubmit" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Creating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <span>Create Time Report</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isSubmitting">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private TimeReportCreateModel model = new();
    private List<Staff> staffMembers = new();
    private List<Schedule> schedules = new();
    private List<Schedule> FilteredSchedules =>
    model.StaffId > 0
        ? schedules.Where(s => s.StaffId == model.StaffId).ToList()
        : schedules;

    // String representations for all date/time inputs
    private string clockInDateString = DateTime.Today.ToString("yyyy-MM-dd");
    private string clockInTimeString = DateTime.Now.ToString("HH:mm");
    private string clockOutDateString = string.Empty;
    private string clockOutTimeString = string.Empty;
    private int selectedScheduleId = 0;

    private bool loading = true;
    private bool isSubmitting = false;
    private bool showValidation = false;
    private string? errorMessage = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            loading = true;
            errorMessage = null;

            // Load staff members and schedules for dropdowns
            staffMembers = await AdminService.GetAllStaffAsync();
            schedules = await AdminService.GetAllSchedulesAsync();
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = $"Access Denied: {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ClearError()
    {
        errorMessage = null;
    }

    private string CalculateHours()
    {
        try
        {
            // Check if we have valid clock-in data
            if (string.IsNullOrWhiteSpace(clockInDateString) || string.IsNullOrWhiteSpace(clockInTimeString))
                return "Enter clock-in";

            // Check if we have clock-out data
            if (string.IsNullOrWhiteSpace(clockOutDateString) || string.IsNullOrWhiteSpace(clockOutTimeString))
                return "Still working";

            // Parse dates
            if (!DateTime.TryParse(clockInDateString, out DateTime clockInDate))
                return "Invalid clock-in date";

            if (!DateTime.TryParse(clockOutDateString, out DateTime clockOutDate))
                return "Invalid clock-out date";

            // Parse times
            if (!TimeSpan.TryParse(clockInTimeString, out TimeSpan clockInTime))
                return "Invalid clock-in time";

            if (!TimeSpan.TryParse(clockOutTimeString, out TimeSpan clockOutTime))
                return "Invalid clock-out time";

            // Combine date and time
            DateTime clockIn = clockInDate.Date.Add(clockInTime);
            DateTime clockOut = clockOutDate.Date.Add(clockOutTime);

            // Calculate duration
            TimeSpan duration = clockOut - clockIn;

            if (duration.TotalHours < 0)
                return "Clock-out before clock-in";

            if (duration.TotalHours > 24)
                return "Duration > 24 hours";

            return $"{duration.TotalHours:F2} hours";
        }
        catch
        {
            return "Calculation error";
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;
            showValidation = true;

            // Validate staff selection
            if (model.StaffId == 0)
            {
                errorMessage = "Please select a staff member.";
                return;
            }

            // Validate activity type
            if (string.IsNullOrWhiteSpace(model.ActivityType))
            {
                errorMessage = "Please select an activity type.";
                return;
            }

            // Validate required fields
            if (string.IsNullOrWhiteSpace(clockInDateString))
            {
                errorMessage = "Clock-in date is required.";
                return;
            }

            if (string.IsNullOrWhiteSpace(clockInTimeString))
            {
                errorMessage = "Clock-in time is required.";
                return;
            }

            // Parse clock-in date
            string clockInDateStringTime = schedules.SingleOrDefault(s => s.Id == selectedScheduleId)?.Date.ToString("yyyy-MM-dd") ?? "";
            if (!DateTime.TryParse(clockInDateStringTime, out DateTime clockInDate))
            {
                errorMessage = "Invalid clock-in date format.";
                return;
            }

            // Parse clock-in time
            if (!TimeSpan.TryParse(clockInTimeString, out TimeSpan clockInTime))
            {
                errorMessage = "Invalid clock-in time format. Please use HH:mm format (e.g., 09:00).";
                return;
            }

            // Combine date and time for ClockIn
            DateTime clockIn = clockInDate.Date.Add(clockInTime);

            // Handle ClockOut (if provided)
            DateTime? clockOut = null;
            if (!string.IsNullOrWhiteSpace(clockOutDateString) && !string.IsNullOrWhiteSpace(clockOutTimeString))
            {
                if (!DateTime.TryParse(clockOutDateString, out DateTime clockOutDate))
                {
                    errorMessage = "Invalid clock-out date format.";
                    return;
                }

                if (!TimeSpan.TryParse(clockOutTimeString, out TimeSpan clockOutTime))
                {
                    errorMessage = "Invalid clock-out time format. Please use HH:mm format (e.g., 17:00).";
                    return;
                }

                clockOut = clockOutDate.Date.Add(clockOutTime);

                // Validate that clock-out is after clock-in
                if (clockOut <= clockIn)
                {
                    errorMessage = "Clock-out time must be after clock-in time.";
                    return;
                }
            }

            // Parse ScheduleId
            int? scheduleId = selectedScheduleId > 0 ? selectedScheduleId : null;

            // Call AdminService to create
            var result = await AdminService.CreateTimeReportAsync(
                staffId: model.StaffId,
                scheduleId: scheduleId,
                clockIn: clockIn,
                clockOut: clockOut,
                activityType: model.ActivityType,
                notes: model.Notes ?? ""
            );

            if (result.Success)
            {
                Navigation.NavigateTo("/timereport");
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = $"Access Denied: {ex.Message}";
        }
        catch (FormatException ex)
        {
            errorMessage = $"Invalid format: {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating time report: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/timereport");
    }

    private void UpdateDatesFromSchedule(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int scheduleId) && scheduleId > 0)
        {
            selectedScheduleId = scheduleId; // Add this line since @bind won't work with @onchange
            var schedule = schedules.FirstOrDefault(s => s.Id == scheduleId);
            if (schedule != null)
            {
                clockInDateString = schedule.Date.ToString("yyyy-MM-dd");
                clockInTimeString = schedule.StartTime.ToString(@"hh\:mm");
            }
        }
        else
        {
            selectedScheduleId = 0; // Handle "No Schedule" selection
        }
    }

    // Model for form binding
    public class TimeReportCreateModel
    {
        public int StaffId { get; set; }
        public string ActivityType { get; set; } = "Regular Work";
        public string? Notes { get; set; }
    }
}
