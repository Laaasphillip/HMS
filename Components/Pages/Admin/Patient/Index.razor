@page "/admin/patients"
@using HMS.Models
@using HMS.Services
@using Microsoft.JSInterop
@inject AdminService AdminService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="container-fluid mt-4">
    <h2 class="mb-4">Patient Management</h2>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    <!-- Patients Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-heart-pulse-fill me-2"></i>
                Total Patients: <span class="badge bg-light text-primary">@patients.Count</span>
            </h5>
            <button class="btn btn-light btn-sm" @onclick='() => Navigation.NavigateTo("/admin/patient/create")'>
                <i class="bi bi-plus-circle me-1"></i> Add Patient
            </button>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading patients...</p>
                </div>
            }
            else if (!patients.Any())
            {
                <div class="text-center p-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="mt-3 text-muted">No patients found. Click "Add Patient" to create one.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Patient ID</th>
                                <th>Full Name</th>
                                <th>Date of Birth</th>
                                <th>Blood Group</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Registered</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in patients)
                            {
                                <tr>
                                    <td><span class="badge bg-info">@patient.Id</span></td>
                                    <td><strong>@patient.User.FirstName @patient.User.LastName</strong></td>
                                    <td>@patient.Dateofbirth.ToString("yyyy-MM-dd")</td>
                                    <td><span class="badge bg-danger">@patient.BloodGroup</span></td>
                                    <td>@patient.Contact</td>
                                    <td>@patient.User.Email</td>
                                    <td>@patient.Address</td>
                                    <td>@patient.Createdat.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-primary"
                                                    @onclick="() => ViewPatient(patient.Id)"
                                                    title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning"
                                                    @onclick="() => EditPatient(patient.Id)"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    @onclick="() => DeletePatient(patient.Id)"
                                                    title="Delete"
                                                    disabled="@isDeletingPatient">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Patient> patients = new();
    private bool isLoading = true;
    private bool isDeletingPatient = false;
    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
    }

    private async Task LoadPatients()
    {
        try
        {
            isLoading = true;
            patients = await AdminService.GetAllPatientsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading patients: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewPatient(int patientId)
    {
        Navigation.NavigateTo($"/admin/patient/view/{patientId}");
    }

    private void EditPatient(int patientId)
    {
        Navigation.NavigateTo($"/admin/patient/edit/{patientId}");
    }

    private async Task DeletePatient(int patientId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this patient?"))
            return;

        try
        {
            isDeletingPatient = true;
            var result = await AdminService.DeletePatientAsync(patientId);

            if (result.Success)
            {
                successMessage = result.Message;
                await LoadPatients();
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting patient: {ex.Message}";
        }
        finally
        {
            isDeletingPatient = false;
        }
    }
}