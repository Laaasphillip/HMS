@page "/invoice"
@using HMS.Models
@using HMS.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject PatientService PatientService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Invoice</h3>

<main class="col-12 col-md-9 col-lg-10 py-4">
    <header class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <div class="d-none d-sm-flex align-items-center gap-2">
                <span class="profile-icon rounded-circle bg-secondary d-inline-block" style="width:36px;height:36px"></span>
                <span class="profile-name">@userName</span>
            </div>
        </div>
    </header>

    <section class="content-area">

        <EditForm Model="@newInvoice" OnValidSubmit="CreateInvoiceAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row g-2 mb-2">
                <div class="col-6 col-md-3">
                    <label class="form-label">Patient</label>
                    <select class="form-select" @bind="newInvoice.PatientId">
                        <option value="">Select Patient</option>
                        @foreach (var patient in patients)
                        {
                            <option value="@patient.Id">@patient.User?.FirstName @patient.User?.LastName</option>
                        }
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">Appointment ID</label>
                    <input type="number" class="form-control" @bind="newInvoice.AppointmentId" placeholder="Enter Appointment ID" />
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">SubTotal</label>
                    <input type="number" step="0.01" class="form-control" @bind="newInvoice.SubTotal" />
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">Tax (%)</label>
                    <input type="number" step="0.01" class="form-control" @bind="taxPercent" />
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="newInvoice.Status">
                        <option value="Unpaid">Unpaid</option>
                        <option value="Paid">Paid</option>
                        <option value="Pending">Pending</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label">Due Date</label>
                    <input type="date" class="form-control" @bind="newInvoice.DueDate" />
                </div>

                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-success">Generate Bill</button>
                </div>
            </div>
        </EditForm>

        <section class="recent-invoice-section mb-5" aria-labelledby="recent-invoice-heading">
            <div class="mb-3">
                <h2 id="recent-invoice-heading" class="h5 mb-1">Recent Invoices</h2>
                <p class="text-muted small mb-0">All invoices linked to patients.</p>
            </div>

            <div class="table-responsive shadow-sm bg-white rounded">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Patient</th>
                            <th>Appointment</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (invoices == null || !invoices.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">No invoices found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var invoice in invoices)
                            {
                                <tr>
                                    <td>@invoice.Id</td>
                                    <td>@invoice.Patient?.User?.FirstName @invoice.Patient?.User?.LastName</td>
                                    <td>@invoice.AppointmentId</td>
                                    <td>@invoice.TotalAmount.ToString("C")</td>
                                    <td>@invoice.Status</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => TransactionInvoice(invoice.Id)">Pay</button>
                                        <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => DetailsInvoice(invoice.Id)">Details</button>
                                        <button class="btn btn-sm btn-outline-warning me-1" @onclick="() => EditInvoice(invoice.Id)">Edit</button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteInvoice(invoice.Id)">Delete</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </section>
</main>

@code {
    private List<Invoice> invoices = new();
    private List<Patient> patients = new();
    private Invoice newInvoice = new();
    private decimal taxPercent = 10;
    private ClaimsPrincipal? user;
    private string userName = "Loading...";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        user = authState.User;
        userName = user?.Identity?.Name ?? "Unknown User";

        patients = await PatientService.GetAllPatientsAsync();
    }

    private async Task CreateInvoiceAsync()
    {
        try
        {
            newInvoice.TaxAmount = newInvoice.SubTotal * (taxPercent / 100);
            newInvoice.TotalAmount = newInvoice.SubTotal + newInvoice.TaxAmount;
            newInvoice.InvoiceNumber = $"INV-{DateTime.Now.Ticks}";
            newInvoice.CreatedAt = DateTime.Now;

            newInvoice = new();
            taxPercent = 10;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating invoice: {ex.Message}");
        }
    }

    private async Task DeleteInvoice(int id)
    {

    }

    private void TransactionInvoice(int id) => Navigation.NavigateTo($"/invoice/transaction/{id}");
    private void DetailsInvoice(int id) => Navigation.NavigateTo($"/invoice/details/{id}");
    private void EditInvoice(int id) => Navigation.NavigateTo($"/invoice/edit/{id}");
}
