@page "/Admin/Staff"
@rendermode InteractiveServer
@inject StaffHttpService StaffHttpService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using HMS.DTOs
@using YourAppNamespace.Services

<div class="container-fluid mt-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Laddar...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <strong>Fel!</strong> @errorMessage
        </div>
    }
    else
    {
        <div class="card">
        <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #5f4f96;">
            <h5 class="mb-0">
                <i class="bi bi-person-badge-fill me-2"></i>
                Total Staff: <span class="badge bg-light" style="color: #5f4f96;">@staffList.Count</span>
            </h5>
            <button class="btn btn-light btn-sm fw-bold" style="color: #5f4f96;"  @onclick='() => Navigation.NavigateTo("/admin/staff/create")'>
                <i class="bi bi-plus-circle me-1"></i> Add Staff
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                                <th>Staff ID</th>
                                <th>User Name</th>
                                <th>Department</th>
                                <th>Specialization</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Contract Form</th>
                                <th>Hourly Rate</th>
                                <th>Hired Date</th>
                                <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in staffList)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@member.Id</span></td>
                                <td><strong>@member.UserName</strong></td>
                                    <td>
                                        <span class="badge bg-info">@member.Department</span>
                                    </td>
                                <td>@(member.Specialization ?? "-")</td>
                                <td>@member.PhoneNumber</td>
                                <td>@member.Email</td>
                                <td>@member.ContractForm</td>
                                <td>$@member.HourlyRate.ToString("N2")/hr</td>
                                <td>@member.HiredDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-primary"
                                                @onclick="() => ViewStaff(member.Id)"
                                                title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-warning"
                                                @onclick="() => EditStaff(member.Id)"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-outline-danger"
                                                @onclick="() => DeleteStaff(member.Id)"
                                                title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
</div>

@code {
    // Updated Staff Demo Model
    private List<StaffDto> staffList = new();
    private bool isLoading = true;
    private bool isDeleting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadStaff();
    }

    private async Task LoadStaff()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            staffList = await StaffHttpService.GetAllStaffAsync();
        }
        catch (HttpRequestException)
        {
            errorMessage = "Could not connect to the server. Check so the API is running.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Fel: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ViewStaff(int staffId) => Navigation.NavigateTo($"/admin/staff/view/{staffId}");
    private void EditStaff(int staffId) => Navigation.NavigateTo($"/admin/staff/edit/{staffId}");

    private async Task DeleteStaff(int staffId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Delete staff?")) return;

        try
        {
            isDeleting = true;
            var success = await StaffHttpService.DeleteStaffAsync(staffId);
            if (success) staffList.RemoveAll(s => s.Id == staffId);
            else errorMessage = "Could not delete staff";
        }
        catch (Exception ex)
        {
            errorMessage = $"Wrong: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }

    private string GetRoleBadgeClass(string role) => role switch
    {
        "Doctor" => "bg-primary",
        "Nurse" => "bg-success",
        "Receptionist" => "bg-warning text-dark",
        _ => "bg-secondary"
    };
}