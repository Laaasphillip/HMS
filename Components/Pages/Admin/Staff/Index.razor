@page "/admin/staff"
@using HMS.Models
@using HMS.Services
@using Microsoft.JSInterop
@inject AdminService AdminService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="container-fluid mt-4">
    <h2 class="mb-4">Staff Management</h2>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    <!-- Staff Section -->
    <div class="card">
        <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #5f4f96;">
            <h5 class="mb-0">
                <i class="bi bi-person-badge-fill me-2"></i>
                Total Staff: <span class="badge bg-light" style="color: #5f4f96;">@staff.Count</span>
            </h5>
            <button class="btn btn-light btn-sm fw-bold" style="color: #5f4f96;" @onclick='() => Navigation.NavigateTo("/admin/staff/create")'>
                <i class="bi bi-plus-circle me-1"></i> Add Staff
            </button>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center p-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading staff members...</p>
                </div>
            }
            else if (!staff.Any())
            {
                <div class="text-center p-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="mt-3 text-muted">No staff members found. Click "Add Staff" to create one.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Staff ID</th>
                                <th>Full Name</th>
                                <th>Specialization</th>
                                <th>Department</th>
                                <th>Email</th>
                                <th>Contract</th>
                                <th>Hourly Rate</th>
                                <th>Hired Date</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in staff)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@member.Id</span></td>
                                    <td><strong>@member.User.FirstName @member.User.LastName</strong></td>
                                    <td>@member.Specialization</td>
                                    <td>@member.Department</td>
                                    <td>@member.User.Email</td>
                                    <td>@member.ContractForm</td>
                                    <td>$@member.HourlyRate.ToString("N2")/hr</td>
                                    <td>@member.HiredDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-primary"
                                                    @onclick="() => ViewStaff(member.Id)"
                                                    title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning"
                                                    @onclick="() => EditStaff(member.Id)"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    @onclick="() => DeleteStaff(member.Id)"
                                                    title="Delete"
                                                    disabled="@isDeletingStaff">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Staff> staff = new();
    private bool isLoading = true;
    private bool isDeletingStaff = false;
    private string? errorMessage = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadStaff();
    }

    private async Task LoadStaff()
    {
        try
        {
            isLoading = true;
            staff = await AdminService.GetAllStaffAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading staff: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewStaff(int staffId)
    {
        Navigation.NavigateTo($"/admin/staff/view/{staffId}");
    }

    private void EditStaff(int staffId)
    {
        Navigation.NavigateTo($"/admin/staff/edit/{staffId}");
    }

    private async Task DeleteStaff(int staffId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this staff member?"))
            return;

        try
        {
            isDeletingStaff = true;
            var result = await AdminService.DeleteStaffAsync(staffId);

            if (result.Success)
            {
                successMessage = result.Message;
                await LoadStaff();
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting staff: {ex.Message}";
        }
        finally
        {
            isDeletingStaff = false;
        }
    }
}