@page "/admin/staff/create"
@using HMS.Data
@using HMS.Models
@using HMS.Services
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject AdminService AdminService
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@attribute [Authorize(Policy = "AdminOnly")]
@rendermode InteractiveServer

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        Add New Staff Member
                    </h4>
                </div>
                <div class="card-body">
                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                        </div>
                    }

                    <EditForm Model="@staff" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="row">
                            <div class="col-12 mb-3">
                                <h6 class="text-muted border-bottom pb-2"><i class="bi bi-person me-2"></i>Personal Information</h6>
                            </div>

                            <!-- First Name -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">First Name *</label>
                                <InputText @bind-Value="staff.FirstName" class="form-control" placeholder="Enter first name" />
                                <ValidationMessage For="@(() => staff.FirstName)" />
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Last Name *</label>
                                <InputText @bind-Value="staff.LastName" class="form-control" placeholder="Enter last name" />
                                <ValidationMessage For="@(() => staff.LastName)" />
                            </div>

                            <!-- Personal Number -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Personal Number (SSN) *</label>
                                <InputText @bind-Value="staff.PersonalNumber"
                                           class="form-control"
                                           placeholder="199001011234"
                                           maxlength="12" />
                                <small class="text-muted">Optional - 12 digits (YYYYMMDDXXXX)</small>
                                <ValidationMessage For="@(() => staff.PersonalNumber)" />
                            </div>

                            <div class="col-12 mb-3 mt-3">
                                <h6 class="text-muted border-bottom pb-2"><i class="bi bi-briefcase me-2"></i>Employment Details</h6>
                            </div>

                            <!-- Specialization -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Specialization *</label>
                                <InputText @bind-Value="staff.Specialization" class="form-control" placeholder="e.g., Cardiology, Emergency Care" />
                                <ValidationMessage For="@(() => staff.Specialization)" />
                            </div>

                            <!-- Department -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Department *</label>
                                <InputSelect @bind-Value="staff.Department" class="form-select">
                                    <option value="">Select Department</option>
                                    <option value="Emergency">Emergency</option>
                                    <option value="ICU">ICU</option>
                                    <option value="Surgery">Surgery</option>
                                    <option value="Pediatrics">Pediatrics</option>
                                    <option value="Cardiology">Cardiology</option>
                                    <option value="Neurology">Neurology</option>
                                    <option value="Orthopedics">Orthopedics</option>
                                    <option value="Radiology">Radiology</option>
                                    <option value="Laboratory">Laboratory</option>
                                    <option value="Administration">Administration</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => staff.Department)" />
                            </div>

                            <!-- Contract Form -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contract Form *</label>
                                <InputSelect @bind-Value="staff.ContractForm" class="form-select">
                                    <option value="">Select Contract Form</option>
                                    <option value="Full-Time">Full-Time</option>
                                    <option value="Part-Time">Part-Time</option>
                                    <option value="Contract">Contract</option>
                                    <option value="Temporary">Temporary</option>
                                    <option value="Intern">Intern</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => staff.ContractForm)" />
                            </div>

                            <!-- Hourly Rate -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Hourly Rate (SEK) *</label>
                                <InputNumber @bind-Value="staff.HourlyRate" class="form-control" step="0.01" placeholder="0.00" />
                                <ValidationMessage For="@(() => staff.HourlyRate)" />
                            </div>

                            <!-- Vacation Days -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Vacation Days *</label>
                                <InputNumber @bind-Value="staff.VacationDays" class="form-control" placeholder="25" />
                                <ValidationMessage For="@(() => staff.VacationDays)" />
                                <small class="text-muted">Default: 25 days per year</small>
                            </div>

                            <!-- Taxes -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tax Rate (%)</label>
                                <InputNumber @bind-Value="staff.Taxes" class="form-control" step="0.01" placeholder="30.00" />
                                <small class="text-muted">Optional - tax percentage</small>
                            </div>

                            <!-- Bank Details -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Bank Details</label>
                                <InputText @bind-Value="staff.BankDetails" class="form-control" placeholder="Bank account number" />
                                <small class="text-muted">Optional</small>
                            </div>

                            <div class="col-12 mb-3 mt-3">
                                <h6 class="text-muted border-bottom pb-2"><i class="bi bi-key me-2"></i>Account Credentials</h6>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email (Login) *</label>
                                <InputText @bind-Value="staff.Email" type="email" class="form-control" placeholder="staff@hospital.com" />
                                <ValidationMessage For="@(() => staff.Email)" />
                                <small class="text-muted">This will be used for login</small>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Password *</label>
                                <InputText @bind-Value="staff.Password" type="password" class="form-control" placeholder="Min 6 characters" />
                                <ValidationMessage For="@(() => staff.Password)" />
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Creating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <span>Create Staff Member</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isSubmitting">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private StaffCreateModel staff = new()
    {
        HourlyRate = 0.00m,
        VacationDays = 25,
        Taxes = 0
    };

    private bool isSubmitting = false;
    private string? errorMessage = null;

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var result = await AdminService.CreateStaffAsync(
                email: staff.Email,
                password: staff.Password,
                firstName: staff.FirstName,
                lastName: staff.LastName,
                contractForm: staff.ContractForm,
                department: staff.Department,
                hourlyRate: staff.HourlyRate,
                specialization: staff.Specialization,
                taxes: staff.Taxes,
                bankDetails: staff.BankDetails ?? string.Empty,
                vacationDays: staff.VacationDays,
                personalNumber: staff.PersonalNumber
            );

            if (result.Success)
            {
                Navigation.NavigateTo("/admin/staff");
            }
            else
            {
                errorMessage = result.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating staff member: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/admin/staff");
    }

    public class StaffCreateModel
    {
        [Required(ErrorMessage = "First name is required")]
        [StringLength(50, MinimumLength = 2, ErrorMessage = "First name must be between 2 and 50 characters")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Last name is required")]
        [StringLength(50, MinimumLength = 2, ErrorMessage = "Last name must be between 2 and 50 characters")]
        public string LastName { get; set; } = string.Empty;

        [StringLength(12, ErrorMessage = "Personal number cannot exceed 12 characters")]
        [RegularExpression(@"^\d{10,12}$", ErrorMessage = "Personal number must be 10-12 digits")]
        public string? PersonalNumber { get; set; }


        [Required(ErrorMessage = "Specialization is required")]
        [StringLength(100, ErrorMessage = "Specialization cannot exceed 100 characters")]
        public string Specialization { get; set; } = string.Empty;

        [Required(ErrorMessage = "Department is required")]
        [StringLength(50, ErrorMessage = "Department cannot exceed 50 characters")]
        public string Department { get; set; } = string.Empty;

        [Required(ErrorMessage = "Contract form is required")]
        public string ContractForm { get; set; } = string.Empty;

        [Required(ErrorMessage = "Hourly rate is required")]
        [Range(0.01, 10000, ErrorMessage = "Hourly rate must be between 0.01 and 10,000")]
        public decimal HourlyRate { get; set; }

        [Required(ErrorMessage = "Vacation days is required")]
        [Range(0, 365, ErrorMessage = "Vacation days must be between 0 and 365")]
        public int VacationDays { get; set; }

        [Range(0, 100, ErrorMessage = "Tax rate must be between 0 and 100")]
        public decimal Taxes { get; set; }

        [StringLength(100, ErrorMessage = "Bank details cannot exceed 100 characters")]
        public string? BankDetails { get; set; }

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address format")]
        [StringLength(100, ErrorMessage = "Email cannot exceed 100 characters")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [StringLength(100, MinimumLength = 6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;
    }
}
