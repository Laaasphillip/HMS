    private async Task LoadData()
    {
        try
        {
            isLoading = true;

            // Check if user is a patient
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            isPatient = authState.User.IsInRole("Patient");

            invoice = await AdminService.GetInvoiceByIdAsync(InvoiceId);

            if (invoice != null)
            {
                // Get transactions for this invoice
                transactions = await AdminService.GetTransactionsByInvoiceIdAsync(InvoiceId);
                transactions = transactions.OrderByDescending(t => t.TransactionDate).ToList();

                // Calculate amounts
                totalPaid = transactions
                    .Where(t => t.Status == "Completed" || t.Status == "Success")
                    .Sum(t => t.Amount);

                remainingAmount = invoice.TotalAmount - totalPaid;
                paymentAmount = remainingAmount;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading invoice: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenPaymentModal()
    {
        paymentAmount = remainingAmount;
        paymentMethod = "Credit Card";
        acceptTerms = false;
        cardNumber = "";
        cardExpiry = "";
        cardCvv = "";
        cardholderName = "";
        mobileNumber = "";
        paymentErrorMessage = null;
        showPaymentModal = true;
    }

    private void ClosePaymentModal()
    {
        showPaymentModal = false;
    }

    private async Task ProcessPayment()
    {
        try
        {
            isProcessing = true;
            paymentErrorMessage = null;

            // Validation
            if (paymentAmount <= 0)
            {
                paymentErrorMessage = "Payment amount must be greater than zero";
                return;
            }

            if (paymentAmount > remainingAmount)
            {
                paymentErrorMessage = $"Payment amount cannot exceed balance due ({remainingAmount:C})";
                return;
            }

            if (!acceptTerms)
            {
                paymentErrorMessage = "Please confirm the payment information";
                return;
            }

            // Validate card details if applicable
            if (paymentMethod == "Credit Card" || paymentMethod == "Debit Card")
            {
                if (string.IsNullOrWhiteSpace(cardNumber) || string.IsNullOrWhiteSpace(cardExpiry) ||
                    string.IsNullOrWhiteSpace(cardCvv) || string.IsNullOrWhiteSpace(cardholderName))
                {
                    paymentErrorMessage = "Please fill in all card details";
                    return;
                }
            }

            if (paymentMethod == "Mobile Payment" && string.IsNullOrWhiteSpace(mobileNumber))
            {
                paymentErrorMessage = "Please enter your phone number";
                return;
            }

            // Create transaction
            var transaction = new HMS.Models.Transaction
            {
                InvoiceId = InvoiceId,
                Amount = paymentAmount,
                PaymentMethod = paymentMethod,
                Status = "Completed",
                TransactionDate = DateTime.Now
            };

            await AdminService.CreateTransactionAsync(transaction);

            successMessage = $"Payment of {paymentAmount:C} processed successfully!";
            ClosePaymentModal();
            await LoadData();
        }
        catch (Exception ex)
        {
            paymentErrorMessage = $"Payment failed: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

