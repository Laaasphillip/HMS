﻿
@page "/invoice/transaction"

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h3 class="fw-bold mb-4">
                        <i class="bi bi-credit-card-2-front me-2 text-primary"></i>
                        Pay Your Invoice
                    </h3>

                    @* Invoice Summary *@
                    <div class="border rounded-3 p-3 mb-4 bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="fw-semibold mb-1">Invoice #INV-1024</h6>
                                <p class="text-muted mb-0">Date: Oct 23, 2025</p>
                            </div>
                            <div class="text-end">
                                <span class="text-muted small">Amount Due</span>
                                <h5 class="fw-bold text-danger mb-0">$19,250.00</h5>
                            </div>
                        </div>
                    </div>

                    @* Billing Info *@
                    <h5 class="fw-semibold mb-3">Billing Information</h5>
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" placeholder="John Doe" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="john@example.com" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" placeholder="123 Main Street" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">City</label>
                            <input type="text" class="form-control" placeholder="Stockholm" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Country</label>
                            <select class="form-select">
                                <option>Sweden</option>
                                <option>Norway</option>
                                <option>Denmark</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Zip Code</label>
                            <input type="text" class="form-control" placeholder="12345" />
                        </div>
                    </form>

                    <hr class="my-4" />

                    @* Payment Method *@
                    <h5 class="fw-semibold mb-3">Payment Method</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-check border rounded-3 p-3">
                                <input class="form-check-input" type="radio" name="payment" id="card" checked />
                                <label class="form-check-label w-100" for="card">
                                    <i class="bi bi-credit-card text-primary me-2"></i>
                                    Credit or Debit Card
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check border rounded-3 p-3">
                                <input class="form-check-input" type="radio" name="payment" id="paypal" />
                                <label class="form-check-label w-100" for="paypal">
                                    <i class="bi bi-paypal text-primary me-2"></i>
                                    PayPal
                                </label>
                            </div>
                        </div>
                    </div>

                    @* Card Fields *@
                    <div class="row g-3 mt-3">
                        <div class="col-md-6">
                            <label class="form-label">Card Number</label>
                            <input type="text" class="form-control" placeholder="1234 5678 9012 3456" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Expiry</label>
                            <input type="text" class="form-control" placeholder="MM/YY" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">CVV</label>
                            <input type="password" class="form-control" placeholder="123" />
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="button" class="btn btn-success btn-lg px-4">
                            <i class="bi bi-lock-fill me-1"></i> Pay Now
                        </button>
                    </div>
                </div>
            </div>

            <div class="text-center text-muted small">
                <i class="bi bi-shield-check me-1"></i> Payments are securely processed and encrypted.
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 1rem;
    }

    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }
</style>