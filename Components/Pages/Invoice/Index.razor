                            <td>Dengue</td>
                            <td>15,000.00</td>
                            <td class="text-end">
                                <button type="button" class="btn btn-sm btn-outline-primary me-1" aria-label="Edit invoice 2">Edit</button>
                                <button type="button" class="btn btn-sm btn-outline-danger" aria-label="Delete invoice 2">Delete</button>
                            </td>
                        </tr>

                        <tr>
                            <td>3</td>
                            <td>Sapooth</td>
                            <td>Blood lab</td>
                            <td>1</td>
                            <td>Dr.Rajitha</td>
                            <td>Dengue</td>
                            <td>15,000.00</td>
                            <td class="text-end">
                                <button type="button" class="btn btn-sm btn-outline-primary me-1" aria-label="Edit invoice 3">Edit</button>
                                <button type="button" class="btn btn-sm btn-outline-danger" aria-label="Delete invoice 3">Delete</button>
                            </td>
                        </tr>

                        <tr>
                            <td>4</td>
                            <td>Sapooth</td>
                            <td>Blood lab</td>
                            <td>1</td>
                            <td>Dr.Rajitha</td>
                            <td>Dengue</td>
                            <td>15,000.00</td>
                            <td class="text-end">
                                <button type="button" class="btn btn-sm btn-outline-primary me-1" aria-label="Edit invoice 4">Edit</button>
                                <button type="button" class="btn btn-sm btn-outline-danger" aria-label="Delete invoice 4">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </section>
</main>