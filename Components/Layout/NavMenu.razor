@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HMS</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2" aria-hidden="true"></i> Home
            </NavLink>
        </div>
           
        <AuthorizeView Policy="Authenticated">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    <i class="bi bi-speedometer2 me-2" aria-hidden="true"></i> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="book-appointment">
                    <i class="bi bi-calendar-plus-fill me-2" aria-hidden="true"></i> Book Appointment
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="appointments">
                    <i class="bi bi-calendar-check me-2" aria-hidden="true"></i> Appointments
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Policy="AdminOrStaff">
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/appointment-slot-configurations">
                    <i class="bi bi-gear-fill me-2" aria-hidden="true"></i> Slot Configurations
                </NavLink>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/appointment-slots">
                    <i class="bi bi-calendar-range me-2"></i>Appointment Slots
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/appointment-blocks">
                    <i class="bi bi-calendar-x me-2" aria-hidden="true"></i> Time Blocks
                </NavLink>
            </div>
            <!-- Patient & Appointment Management -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/patients">
                    <i class="bi bi-people-fill me-2" aria-hidden="true"></i> Patients
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="invoice">
                    <i class="bi bi-receipt me-2" aria-hidden="true"></i> Invoices
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/transaction">
                    <i class="bi bi-credit-card me-2" aria-hidden="true"></i> Transactions
                </NavLink>
            </div>

            <!-- Staff Management -->
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/staff">
                    <i class="bi bi-person-badge-fill me-2" aria-hidden="true"></i> Staff
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/schedules">
                    <i class="bi bi-calendar3 me-2" aria-hidden="true"></i> Schedules
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/timereport/index">
                    <i class="bi bi-clock-history me-2" aria-hidden="true"></i> Time Reports
                </NavLink>
            </div>

        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <hr class="my-2 text-white" />
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/profile/profile">
                        <i class="bi bi-person-fill me-2" aria-hidden="true"></i> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <i class="bi bi-gear me-2" aria-hidden="true"></i> Settings
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <i class="bi bi-arrow-bar-left me-2" aria-hidden="true"></i> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <i class="bi bi-person me-2" aria-hidden="true"></i> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <i class="bi bi-person-badge me-2" aria-hidden="true"></i> Login
                    </NavLink>
                </div>


            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

